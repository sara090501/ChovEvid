<Window x:Class="ChovEvidWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChovEvidWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Definícia riadkov a stĺpcov -->
        <Grid.RowDefinitions>
            <RowDefinition Height="12.5*" />
            <!-- Prvá osmina -->
            <RowDefinition Height="12.5*" />
            <!-- Druhá osmina -->
            <RowDefinition Height="62.5*" />
            <!-- Päť osmin (3.-7. osmina) -->
            <RowDefinition Height="12.5*" />
            <!-- Zvyšok priestoru -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- Nadpis v prvej osmine -->
        <TextBlock Text="Evidencia chovateľských staníc - ChovEvid" 
                   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="24" FontWeight="Bold" />

        <!-- Tlačidlá v druhom riadku -->
        <Button Content="Zobraziť osoby" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"/>
        <Button Content="Zobraziť psov" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"/>
        <Button Content="Zobraziť chovateľské stanice" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"/>
        <!-- Štvrtý stĺpec je prázdny -->

        <!-- ListView pod tlačidlami s obmedzenou šírkou -->
        <ListView x:Name="BreedingStationsListView" 
                  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                  Margin="10,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Registračné číslo" DisplayMemberBinding="{Binding RegNumber}" />
                    <GridViewColumn Header="Meno" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Majiteľ" DisplayMemberBinding="{Binding Owner}" />
                    <GridViewColumn Header="Počet evidovaných psov" DisplayMemberBinding="{Binding DogCount}" />
                    <GridViewColumn Header="Vznik" DisplayMemberBinding="{Binding Created}" />
                    <GridViewColumn Header="Sídlo" DisplayMemberBinding="{Binding Location}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
